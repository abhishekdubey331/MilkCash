<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.animall.viewmodels.MainViewmodel" />
          </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recordSaleLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RecordSaleActivity"
        android:background="@color/white">

        <EditText
            android:id="@+id/quantityEditText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:hint="Quantity"
            android:background="@drawable/text"
            android:inputType="numberDecimal"
            android:onClick="@{()->viewModel.clearErrors()}"
            android:text="@={viewModel.quantity}"
            app:error="@{viewModel.quantityError}"
            android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/priceEditText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Price per Unit"
            android:padding="20dp"
            android:background="@drawable/text"
            android:inputType="numberDecimal"
            android:text="@={viewModel.price}"
            app:error="@{viewModel.priceError}"
            android:onClick="@{()->viewModel.clearErrors()}"
            android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quantityEditText"
        android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/DateTxt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:editable="false"
            app:error="@{viewModel.dateError}"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/text"
            android:text="@{viewModel.selectedDateFormatted}"
            android:textAlignment="center"
            android:textSize="15sp"
            android:onClick="@{() -> viewModel.showDatePicker()}"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/priceEditText"/>

<!--        <Button-->
<!--            android:id="@+id/selectDateButton"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Select Date"-->
<!--            android:onClick=""-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/DateTxt"-->
<!--            android:layout_marginTop="16dp"/>-->

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/datePickercl"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/DateTxt"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:background="@color/gray"
    android:elevation="10dp">
    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:calendarTextColor="@color/black"
        android:visibility="@{viewModel.datePickerVisible ? View.VISIBLE : View.GONE}"
        android:onDateChanged="@{(view, year, month, day) -> viewModel.onDateChanged(year, month, day)}"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/saveSaleButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Save Sale"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:padding="20dp"

            android:onClick="@{() -> viewModel.saveSale()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DateTxt"
            android:layout_marginTop="16dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
