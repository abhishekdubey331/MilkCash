<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.animall.viewmodels.ViewSalesViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBarCl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/startDateCL"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/stDteTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="25dp"
                android:text="Start Date: "
                android:textSize="25sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/startDateTxt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:editable="false"
                android:layout_marginStart="10dp"
                android:hint="Start date"
                app:error="@{viewModel.dateError}"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/stDteTxt"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/text"
                android:textAlignment="center"
                android:textSize="15sp"
                android:padding="20dp"
                app:layout_constraintTop_toTopOf="@+id/stDteTxt"
                app:layout_constraintBottom_toBottomOf="@+id/stDteTxt"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/endDateCL"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/startDateCL">

            <TextView
                android:id="@+id/enDteTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="25dp"
                android:text="End Date: "
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/endDateTxt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/text"
                android:editable="false"
                android:hint="End date"
                android:padding="20dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:error="@{viewModel.dateError}"
                app:layout_constraintBottom_toBottomOf="@+id/enDteTxt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/enDteTxt"
                app:layout_constraintTop_toTopOf="@+id/enDteTxt" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/datePickercl"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/endDateCL"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/gray"
            android:visibility="@{viewModel.datePickerVisible ? View.VISIBLE : View.GONE}"
            android:elevation="10dp">
            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:calendarTextColor="@color/black"

                android:onDateChanged="@{(view, year, month, day) -> viewModel.onDateChanged(year, month, day)}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

</layout>
