<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MilkCash" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CustomDatePicker" parent="CustomDatePickerStyle">
        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
    </style>

    <style name="CustomDatePickerStyle">
        <!-- Your custom styling attributes -->
        <item name="android:background">@drawable/custom_date_picker_bg</item>
        <item name="android:datePickerMode">calendar</item>
    </style>
</resources>